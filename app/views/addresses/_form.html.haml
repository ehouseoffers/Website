= form_for @address do |f|
  = render :partial => 'shared/user_notice', :locals => {:model_obj => @guide}

  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :address1
    = f.text_field :address1
  .field
    = f.label :address2
    = f.text_field :address2
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :zip
    = f.text_field :zip
  .field
    = f.label :label
    = f.text_field :label
  .field
    = f.label :primary
    = f.check_box :primary

  .actions
    = f.submit 'Save'
