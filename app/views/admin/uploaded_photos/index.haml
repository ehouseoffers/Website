:ruby
  extra_css('scaffold')

%h1 Uploaded Photos

- unless @uploaded_photos.empty?
  %table.fullw
    %tr
      %th{:style => 'width:130px'}
      %th id
      %th thumb size
      %th original size
      %th type
      %th size
      %th upload date
      %th updated on
      %th 

    - @uploaded_photos.each do |photo|
      %tr
        %td= link_to image_tag(photo.photo.url(:small)), photo.photo.url
        %td= photo.id
        %td= photo.photo.url(:small)
        %td= photo.photo.url
        %td= photo.photo_content_type
        %td= photo.photo_file_size
        %td= photo.created_at
        %td= photo.photo_updated_at
        %td= link_to 'X', admin_uploaded_photo_path(photo.id), :confirm => 'Are you sure?', :method => :delete
  %br

= link_to "Admin Panel", admin_path
