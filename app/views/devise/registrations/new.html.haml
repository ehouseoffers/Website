:ruby
  header(:title, 'Sign Up')
  page_title 'Sign Up'

= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = render :partial => 'shared/user_notice', :locals => {:model_obj => resource}

  - [:first_name, :last_name, :email].each do |field_name|
    .field
      = f.label field_name
      = f.text_field field_name

  - [:password, :password_confirmation].each do |field_name|
    .field
      = f.label field_name
      = f.password_field field_name

  %p= f.submit "Sign up"

= render :partial => "devise/shared/links"
