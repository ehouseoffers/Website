:ruby
  header(:title, 'Real Estate Guides')
  # header(:description, 'Get description from Sam')

  extra_css('guides','pagination')

= admin_area do
  = link_to "Create New Blog", new_guide_path()

= render "shared/breadcrumb", :crumbs => crumbs_for_blog_object(@guides)

%div.xs_two_col.yui3-g
  %div#left_col.yui3-u-33-48
    = render "shared/slider", :id => 'guides_slider', :collection => @other_guides

    - if @guides.empty?
      %p.sorry_no_results
        = "Sorry, but no guides were found #{params[:page].present? ? 'for this page.' : '.'}"
    - else
      %hr.space
      = render :partial => "guide", :collection => @guides, :spacer_template => 'shared/spacers/guides_index'

    %hr.space
    = will_paginate @reasons

  %div#right_col.yui3-u-7-24
    = render :partial => "shared/seller_signup"

