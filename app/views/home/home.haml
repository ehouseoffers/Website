:ruby
  h1_title = 'Professional Home Buyers'
  header(:title, h1_title)

  extra_css('home')

%div#homeC.yui3-g
  %div#welcome_messageC.yui3-u-3-5
    = image_tag '/images/transparent.gif', :id => 'satisfied_sellers', :class => 'sprite', :alt => 'Tom &amp; Sharon: Satisfied Home Sellers'
    %div#welcome_message_opacity &nbsp;
    %div#welcome_message
      %h1
        = image_tag '/images/transparent.gif', :id => 'welcome_title', :class => 'sprite', :alt => h1_title
      %p
        At eHouseOffers youâ€™ll find resources for home sellers, information on real estate trends & a community of
        professional home buyers.


  %div#cash_offer_formC.yui3-u-2-5
    = image_tag '/images/transparent.gif', :id => 'get_cash_offer', :class => 'sprite', :alt => 'Get a cash offer on your house today!'
    = render :partial => 'seller_listings/form'

  %hr.indent
  %hr.space

  %div#resources_rowC
    %div.yui3-u-3-8.yui3-g
      - video_img = image_tag '/images/transparent.gif', :id => 'what_we_do_video_preview', :class => 'sprite', :alt => 'Video Preview'
      = what_we_do_modal(video_img)
      %div#sv_contentC.bottom_contentC
        %h1
          - seller_vid = image_tag '/images/transparent.gif', :id => 'what_we_do_title', :class => 'sprite', :alt => 'Sellers Video'
          = what_we_do_modal(seller_vid)

        %p
          Click on the above video above to learn who we are and find out how we can help you sell your house.

        %p
          = what_we_do_modal('Watch Demo Video')
          = image_tag '/images/transparent.gif', :class => 'sprite rArr'

      
    %div.yui3-u-15-48
      - bicon_img = image_tag '/images/transparent.gif', :id => 'our_home_buyers_icons', :class => 'sprite', :alt => 'About Our Home Buyers'
      = link_to bicon_img, about_path()
      %div#tu_contentC.bottom_contentC
        %h1
          - btitle_img = image_tag '/images/transparent.gif', :id => 'our_home_buyers_title', :class => 'sprite', :alt => 'Our Home Buyers'
          = link_to btitle_img, about_path()
        %p
          Across the US, our certified professional home buyers give real estate owners cash offers for their homes.

        %p
          = link_to 'Learn About Us', about_path()
          = image_tag '/images/transparent.gif', :class => 'sprite rArr'

    %div.yui3-u-7-24
      - ricon_img = image_tag '/images/transparent.gif', :id => 'seller_resources_icon', :class => 'sprite', :alt => 'Seller Resources'
      = link_to ricon_img, guides_path()
      %div#rs_contentC.bottom_contentC
        %h1
          - rtitle_img = image_tag '/images/transparent.gif', :id => 'seller_resources_title', :class => 'sprite', :alt => 'Seller Resources'
          = link_to rtitle_img, guides_path()
        %p
          Our free guides give home sellers the tools they need to make informed home sale decisions

        %p
          = link_to 'Read Seller Guides', guides_path()
          = image_tag '/images/transparent.gif', :class => 'sprite rArr'            


  %hr.indent
  %hr.space
  
  = render 'shared/quotes_row'
