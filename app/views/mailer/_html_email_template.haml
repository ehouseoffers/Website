%html
  %head
    %title= "#{@title} :: eHouseOffers" || 'eHouseOffers.com'
    %meta{:content => "text/html;charset=UTF-8", "http-equiv" => "content-type"}/
    :css
      html{background:#f2f6dc;color:#333;font-size:14px;font-family:arial,helvetica,sans-serif;}
      hr{background:#75973e;color:#75973e;clear:both;float:none;width:100%;height:.1em;margin:1em 0;border:none;}
      img{border:none;}
      a{color:#8eae5b;}
      h1{color:#333;font-size:18px;margin:0 0 10px 0;}
      p,pre{margin:0 0 10px 0;}

%body{:style => 'padding:0;margin:0;'}
  %center
    %div{:style => 'width:620px;text-align:left;margin:20px 0 0 0;'}
      = link_to image_tag("https://#{KEYS['host']}/images/email/ehouseoffers-logo.png", :alt => 'eHouseOffers.com: Professional Home Buyers'), root_url(:protocol => 'https')
      %hr
      
      %pre= body

      %strong eHouseOffers
      %br
      %span{:style => 'font-size:12px;'}
        = link_to root_url(:protocol => 'https'), root_url(:protocol => 'https')

      %hr
      %div{:style => 'font-size:11px;color:#888'}
        = raw "Call Today for a #{link_to 'Free Cash Home Offer', new_home_offer_url(:protocol => 'https')} 866.384.9068"
        %br
        = raw "or contact us at #{mail_to 'contact@ehouseoffers.com', 'contact@ehouseoffers.com'} to find out how to #{link_to 'become a home buyer', become_a_buyer_url(:protocol => 'https')}"
        %br
        Visit us on
        = link_to 'linkedin', 'http://www.linkedin.com/groups?mostPopular=&gid=3186741'
        = link_to 'facebook', 'http://www.facebook.com/pages/eHouseOfferscom/129602593768138'
        = link_to 'twitter', 'http://twitter.com/ehouseoffers'
        = link_to 'youtube', 'http://www.youtube.com/user/ehouseoffers'
