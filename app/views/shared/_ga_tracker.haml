-# Set ga_tracker(true|false) in controller. See application_controller.rb
- if !ga_tracker?
  :javascript
    function ga_track_page(p){}
- else
  :javascript
    var ga_tracking_code = 'UA-15748397-2';
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', ga_tracking_code]);
    _gaq.push(['_setAllowAnchor', true]); 
    _gaq.push(['_trackPageview']);
    
    var pageTracker;
    (function() {
      var ga = document.createElement('script');
      ga.type = 'text/javascript';
      ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
    
    var pageTracker;
    function ga_track_page(page) {
      try {
        if ( !pageTracker ) pageTracker = _gat._getTracker(ga_tracking_code);
        pageTracker._initData();
        pageTracker._trackPageview(page);
      } catch(e) {}
    }

