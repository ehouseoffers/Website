:ruby
  extra_js('jquery.slider')
  extra_css('jquery.slider')

  image_size = image_size.present? ? image_size.intern : :medium

%div.slider{:id => id}
  %div.slider_bg
  %div.scroll
    %div.scrollContainer.clearfix
      - collection.each_with_index do |object, idx|
        %div.panel{:id => "panel_#{idx+1}"}
          %div.inside
            = image_tag object.photo.url(image_size), :alt => object.title, 'data-path' => object_path(object)

  %h2 &nbsp;

  %div.scroll_actionsC
    %div.scroll_left &nbsp;
    %div.scrollbarC
      %div.scrollbar &nbsp;
    %div.scroll_right &nbsp;
